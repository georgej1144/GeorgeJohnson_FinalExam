<%- include('../partials/header') %>
<%- include('../partials/menu') %>

<% if(mealData) {%>
    <div class="container" id="foodbox">
        <div class="row rowBig">
            <div class="col-4">
                <img class="rounded img-fluid" src="<%-mealData.strMealThumb%>" alt="mealImage" id="foodImage">
            </div>
            <div class="col-8">
                <h2><%= mealName ? mealName : '-'%></h2>
                <p><b>Instructions</b></p>
                <p><%= mealData.strInstructions ? mealData.strInstructions : '-'%></p>
                <p><b>Tags</b></p>
                <p><%= mealData.strTags ? mealData.strTags : '-'%></p>
                <div class="row">
                    <div class="col-8">
                        <a class="btn btn-primary" href="<%= mealData.strSource ? mealData.strSource : '-'%>" role="button">View Source Website</a>
                        <a class="btn btn-primary" href="<%= mealData.strYoutube ? mealData.strYoutube : '-'%>" role="button">Watch on YouTube</a>
                    </div>
                </div>
                <div class="row rowBig">
                    <div class="col-8">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add review</button>

                        <div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Review</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/post_review" method="post">
                                            <div class="row">
                                                <div class="col-5">
                                                    <label class="form-control mr-sm-2" id="foodNameLabel" aria-label="Food Name">Food Name</label>
                                                </div>
                                                <div class="col-7">
                                                    <input class="form-control" id="food name" type="text" name="foodName" value="<%= mealName ? mealName : '-'%>" READONLY>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-5">
                                                    <label class="form-control mr-sm-2" id="reviewLabel" aria-label="Food Name">Enter your review here:</label>
                                                </div>
                                                <div class="col-7">
                                                    <textarea class="form-control" id="exampleFormControlTextarea1" name="review" rows="6"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%} else {%>
    <div class="row">
        <div class="container d-flex justify-content-center" id="foodbox" style="padding-top: 100px">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Error</h5>
                    <p class="card-text">The food you entered was not found.</p>
                </div>
            </div>
        </div>
    </div>
<%}%>

<%- include('../partials/footer') %>
